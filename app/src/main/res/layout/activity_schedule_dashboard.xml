<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp">


    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:contentDescription="App Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/school_logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:layout_width="263dp"
        android:layout_height="84dp"
        android:text="Schedules Management"
        android:textColor="#333"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="21dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="436dp"
        android:layout_height="968dp"
        android:padding="10dp"
        tools:context=".ScheduleDashboardActivity"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-23dp"
        tools:layout_editor_absoluteY="-20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="top|bottom"
            android:orientation="vertical"
            android:paddingBottom="100dp">


            <androidx.cardview.widget.CardView

                android:id="@+id/cardCreateStudent"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:elevation="6dp"
                android:foreground="?attr/selectableItemBackground"
                android:radius="16dp">

                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="153dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/imageStudent1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="24dp"
                        android:contentDescription="Student Logo"
                        android:scaleType="fitCenter"
                        android:src="@drawable/students_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Student Schedule"
                        android:textColor="#333"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCreateTeacher"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:elevation="6dp"
                android:foreground="?attr/selectableItemBackground"
                android:radius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="136dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/imageTeacher1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="24dp"
                        android:contentDescription="Teacher Logo"
                        android:scaleType="fitCenter"
                        android:src="@drawable/teachers_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Teacher Schedule"
                        android:textColor="#333"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewStudent"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:elevation="6dp"
                android:foreground="?attr/selectableItemBackground"
                android:radius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/imageStudent2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="24dp"
                        android:contentDescription="Student Logo"
                        android:scaleType="fitCenter"
                        android:src="@drawable/students_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Student Schedules"
                        android:textColor="#333"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewTeacher"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:clickable="true"
                android:elevation="6dp"
                android:foreground="?attr/selectableItemBackground"
                android:radius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/imageTeacher2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="24dp"
                        android:contentDescription="Teacher Logo"
                        android:scaleType="fitCenter"
                        android:src="@drawable/teachers_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Teacher Schedules"
                        android:textColor="#333"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>