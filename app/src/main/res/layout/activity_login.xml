<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/wallpaper3">


    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/schoolLogo"
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:src="@drawable/school_logo" />

        <TextView
            android:id="@+id/schoolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Palestine School"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/monkeyImage"
        android:layout_width="399dp"
        android:layout_height="185dp"
        android:layout_below="@id/headerLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-13dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Monkey Character"
        android:src="@drawable/monkey_open_eyes" />

    <EditText
        android:id="@+id/username"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_below="@id/monkeyImage"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-9dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_rounded_border"
        android:drawableStart="@drawable/user"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="#000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/edittext_rounded_border"
        android:drawableStart="@drawable/password"
        android:drawableEnd="@drawable/eye_show_password"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_below="@id/username"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext_rounded_border"
        android:text="LOGIN"
        android:textAllCaps="true"
        android:drawableEnd="@drawable/login"
        android:textColor="#060505"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"/>

</RelativeLayout>
